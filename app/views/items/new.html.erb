<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-3">
    	
      <br><br><br>
      <%= form_for @item, html: { class: "form-signin mt-3" } do |f| %>
        <h1 class="h3 mb-3 font-weight-normal text-center">Cr√©er un nouveau produit</h1>
        <div class="form-group">
          <%= f.label :title, "Titre" %><br />
          <%= f.text_field :title, autocomplete: "Titre", class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :description %><br />
          <%= f.text_area :description, autocomplete: "Description", class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :price, "Prix" %><br />
          <%= f.number_field :price, step: 0.5, autocomplete: "Prix", class: "form-control" %>
        </div>
        <div class="actions mt-5">
          <%= f.submit "Vendre votre produit", class: "btn btn-lg btn-primary btn-block" %>
        </div><br/><br/>
      <% end %>
    </div>
  </div>
</div>